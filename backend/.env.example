# Database connection URLs (PostgreSQL - Supabase)
DATABASE_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<HOST>:5432/<DB_NAME>
DIRECT_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<HOST>:5432/<DB_NAME>

# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=https://<PROJECT_REF>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=<YOUR_SUPABASE_ANON_KEY>

# JWT secret (for authentication)
JWT_SECRET=<YOUR_RANDOM_SECRET_KEY>

# Firebase Admin credentials
FIREBASE_PROJECT_ID=<YOUR_FIREBASE_PROJECT_ID>
FIREBASE_CLIENT_EMAIL=<YOUR_FIREBASE_CLIENT_EMAIL>
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
<YOUR_FIREBASE_PRIVATE_KEY_CONTENT>
-----END PRIVATE KEY-----

# Google Auth credentials
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>

# Server port
PORT=3001

# Redis configuration (for job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Or use Redis URL (for Railway/Heroku)
# REDIS_URL=redis://username:password@host:port
