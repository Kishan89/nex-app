{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "types": ["react-native", "expo"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    "react-jsx.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
